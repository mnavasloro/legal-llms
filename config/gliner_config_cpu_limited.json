{
  "project": {
    "name": "GLiNER CPU Limited",
    "description": "Configuration for CPU-only or memory-limited training"
  },
  "extends": "gliner_config_default.json",
  "training": {
    "num_epochs": 8,
    "batch_size": 2,
    "learning_rate": 7e-6,
    "save_steps": 2000,
    "eval_steps": 2000,
    "logging_steps": 200
  },
  "data": {
    "max_tokens_per_chunk": 256,
    "chunk_overlap": 25
  },
  "output": {
    "base_dir": "output/gliner_cpu_limited"
  }
}